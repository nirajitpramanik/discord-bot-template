# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
BOT_PREFIX=!
OWNER_IDS=123456789012345678,987654321098765432

# Environment
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///bot.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/dbname
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Web Interface
ENABLE_WEB_INTERFACE=true
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_DEBUG=false
WEB_SECRET_KEY=your-secret-key-change-this-in-production
WEB_API_KEY=your-api-key-for-web-endpoints

# Data Crawler
ENABLE_CRAWLER=true
CRAWLER_ENABLED=true
CRAWLER_INTERVAL=3600
CRAWLER_MAX_CONCURRENT=5
CRAWLER_TIMEOUT=30

# Feature Flags
ENABLE_LOGGING=true

# Rate Limiting
GLOBAL_RATE_LIMIT=5
USER_RATE_LIMIT=10

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# API Settings
API_TIMEOUT=30
MAX_RETRIES=3

# Security
ALLOWED_DOMAINS=
BLOCKED_DOMAINS=

# Logging
LOG_ROTATION=midnight
LOG_RETENTION=7

# Production Settings (uncomment for production)
# PORT=8000
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/prod_db
# DEBUG=false
# WEB_DEBUG=false
# LOG_LEVEL=WARNING